<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InterestPartActivity">

    <TextView
        android:id="@+id/startText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Lets start your journey"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="@id/startText"
        app:layout_constraintBottom_toTopOf="@+id/button_submitInterest">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/linearContent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/ig1"
                android:tag="1"
                android:contentDescription="Art"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/artandcraftimage"
                android:foregroundGravity="center"
                android:visibility="visible"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toLeftOf="@id/ig2"/>
            <ImageView
                android:id="@+id/ig3"
                android:tag="3"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/careerandbusinessimage"
                android:foregroundGravity="center"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ig1"
                app:layout_constraintRight_toLeftOf="@id/ig4" />

            <ImageView
                android:id="@+id/ig5"
                android:tag="5"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/cultureimage"
                android:foregroundGravity="center"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ig3"
                app:layout_constraintRight_toLeftOf="@id/ig6" />

            <ImageView
                android:id="@+id/ig7"
                android:tag="7"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/danceimage"
                android:foregroundGravity="center"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ig5"
                app:layout_constraintRight_toLeftOf="@id/ig8" />

            <ImageView
                android:id="@+id/ig9"
                android:tag="9"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/filmimage"
                android:foregroundGravity="center"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ig7"
                app:layout_constraintRight_toLeftOf="@id/ig10" />

            <ImageView
                android:id="@+id/ig11"
                android:tag="11"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/fooddrinksimage"
                android:foregroundGravity="center"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ig9"
                app:layout_constraintRight_toLeftOf="@id/ig12" />

            <ImageView
                android:id="@+id/ig13"
                android:tag="13"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/healthandwellnessimage"
                android:foregroundGravity="center"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ig11"
                app:layout_constraintRight_toLeftOf="@id/ig14" />

            <ImageView
                android:id="@+id/ig15"
                android:tag="15"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/languageimage"
                android:foregroundGravity="center"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ig13"
                app:layout_constraintRight_toLeftOf="@id/ig16" />

            <ImageView
                android:id="@+id/ig17"
                android:tag="17"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/learningimage"
                android:foregroundGravity="center"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ig15"
                app:layout_constraintRight_toLeftOf="@id/ig18" />

            <ImageView
                android:id="@+id/ig19"
                android:tag="19"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/literatureimage"
                android:foregroundGravity="center"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ig17"
                app:layout_constraintRight_toLeftOf="@id/ig20" />

            <ImageView
                android:id="@+id/ig21"
                android:tag="21"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/musicimage"
                android:foregroundGravity="center"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ig19"
                app:layout_constraintRight_toLeftOf="@id/tickRef" />


            <ImageView
                android:id="@+id/ig2"
                android:tag="2"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/ig1"
                android:foregroundGravity="center"
                android:layout_marginRight="10dp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="right"
                android:src="@drawable/booksimage" />



            <ImageView
                android:id="@+id/ig4"
                android:tag="4"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/fashionimage"
                android:foregroundGravity="center"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ig2"
                app:layout_constraintLeft_toRightOf="@id/ig3"/>

            <ImageView
                android:id="@+id/ig6"
                android:tag="6"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/outdooradventuretravelimage"
                android:foregroundGravity="center"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ig4"
                app:layout_constraintLeft_toRightOf="@id/ig5"/>

            <ImageView
                android:id="@+id/ig8"
                android:tag="8"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/petsimage"
                android:foregroundGravity="center"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ig6"
                app:layout_constraintLeft_toRightOf="@id/ig7"/>

            <ImageView
                android:id="@+id/ig10"
                android:tag="10"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/photographyimage"
                android:foregroundGravity="center"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ig8"
                app:layout_constraintLeft_toRightOf="@id/ig9"/>

            <ImageView
                android:id="@+id/ig12"
                android:tag="12"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/scifiandgamesimage"
                android:foregroundGravity="center"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ig10"
                app:layout_constraintLeft_toRightOf="@id/ig11"/>

            <ImageView
                android:id="@+id/ig14"
                android:tag="14"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/socialimage"
                android:foregroundGravity="center"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ig12"
                app:layout_constraintLeft_toRightOf="@id/ig13"/>

            <ImageView
                android:id="@+id/ig16"
                android:tag="16"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/sportsandfitnessimage"
                android:foregroundGravity="center"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ig14"
                app:layout_constraintLeft_toRightOf="@id/ig15"/>

            <ImageView
                android:id="@+id/ig18"
                android:tag="18"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/tech"
                android:foregroundGravity="center"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ig16"
                app:layout_constraintLeft_toRightOf="@id/ig17"/>

            <ImageView
                android:id="@+id/ig20"
                android:tag="20"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/writingimage"
                android:foregroundGravity="center"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ig18"
                app:layout_constraintLeft_toRightOf="@id/ig19"/>

            <ImageView
                android:id="@+id/tickRef"
                android:tag="22"
                android:layout_marginTop="10dp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/tick"
                android:foregroundGravity="center"
                android:visibility="invisible"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ig20"
                app:layout_constraintLeft_toRightOf="@id/ig21" />





        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <Button
        android:id="@+id/button_submitInterest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/scrollContent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:text="submit" />







</androidx.constraintlayout.widget.ConstraintLayout>